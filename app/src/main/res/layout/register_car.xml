<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER VEHICLE"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/checkCarAnimation"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="carScan.json"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtVehicleBrand"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Car brand"
            android:inputType="textCapCharacters"
            android:textAlignment="center"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtVehiclePlate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:hint="Car plate"
            android:inputType="textCapCharacters"
            android:textAlignment="center"/>


        <Button
            android:id="@+id/btnRegisterCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="join"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>